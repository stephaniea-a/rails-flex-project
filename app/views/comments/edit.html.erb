<h1>Edit Comment</h1>


<%= form_with(model: @comment) do |form| %>

		<div class="field">
			<%= form.label :'name:' %>
			<%= form.text_field :name, id: :comment_name %>	
		</div>

		<div class="field">
			<%= form.label :'comment:' %>
			<%= form.text_area :comment, id: :comment_content %>	
		</div>

		<%= form.hidden_field :pose_id, :value => params[:pose_id] %>

		<div class="field">
			<%=form.submit %>
		</div>

<% end %>