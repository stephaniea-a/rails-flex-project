<div class="new-form">
	<h1>Edit Comment</h1>


	<%= form_for @comment, :html => {:class => "form-horizontal center"} do |form| %>
		<div class="form-group">
			<%= form.label :'name:', class: "col-sm-10" %>
			<div class="col-sm-10">
				<%= form.text_field :name, id: :comment_name, class: "col-md-4 form-control" %>	
			</div>
		</div>

		<div class="form-group">
			<%= form.label :'comment:', class: "col-sm-10" %>
			<div class="col-sm-10">
				<%= form.text_area :comment, id: :comment_content, class: "col-md-4 form-control" %>	
			</div>
		</div>

		<div class="form-group">
			<%=form.submit %>
		</div>

	<% end %>
</div>