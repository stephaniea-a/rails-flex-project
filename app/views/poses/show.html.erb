<h1>Show</h1>

<h2><%= @pose.name %></h2>
<p><%= @pose.sanskrit_name %></p>
<img src="<%= @pose.image %>">
<p>Description <%= @pose.description %></p>
<p>Difficulty Level <%= @pose.difficulty_level %></p>

<% @pose.comments.each do |comment| %>
	<div>
		<p><%= comment.name %></p>
		<p><%= comment.comment %></p>
	</div>
    <%= link_to 'Destroy', @comment, method: :delete %> 
<% end %>



<%= link_to 'Edit', edit_pose_path(@pose) %> |
<%= link_to 'Back', poses_path %>
<%= link_to 'Add Comment', new_comment_path(:pose_id => @pose.id) %>


